[difftool]
	prompt = false
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
	; path = nvim

[alias]
	co = checkout
	df = diff
	s = status
	dd = "!cd \"${GIT_PREFIX-.}\"; c='+G diff'; for a in \"$@\"; do c=\"$c\"`printf ' %q' \"$a\"`; done; nvim \"$c|on\" #"
	ss = "!cd \"${GIT_PREFIX-.}\"; c='+G show --dd'; for a in \"$@\"; do c=\"$c\"`printf ' %q' \"$a\"`; done; nvim \"$c|on\" #"
	; ss = "!cd \"${GIT_PREFIX-.}\"; git cat-file -e \"$1\" && nvim '+G difftool -y $1^ $1 -- ${@:2}' || nvim '+G difftool -y HEAD^ HEAD ${@}' #"
	st = stash
	sa = stash apply
	sd = stash show -p
	sl = stash list
	sm = "!cd \"${GIT_PREFIX-.}\"; [[ $# -gt 0 && ! -e \"${@: -1}\" ]] && git stash push -m \"${@: -1}\" -- \"${@:1:$(($#-1))}\" || git stash push -m `date +%F,%T%z` -- \"$@\""
	sp = stash pop
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai @%an)%Creset'
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai @%an)%Creset' --numstat
	permission-reset = !git diff -p -R --no-ext-diff --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
	rl = reflog --pretty=format:'%Cred%h %Cgreen%ai %Cblue@%an%Creset %s'
	br = branch
	bd = branch -d
	sw = switch
	ca = commit --amend
	ce = commit --amend --no-edit
	cm = commit -m
	ee = "!git commit --allow-empty -m \"${1:-wip}\" #"
	cc = "![[ $# -gt 0 ]] && cd \"${GIT_PREFIX-.}\" && git add \"$@\" || git add .; git commit -m wip #"
	c = commit
	a = add
	rs = restore
	rb = rebase
	fa = fetch --all
	mf = merge FETCH_HEAD
	m = merge
	mt = mergetool
	cp = cherry-pick
	pl = pull
	pr = pull --rebase
	ps = push
	po = push origin
	pf = push -f
	pd = push origin --delete

